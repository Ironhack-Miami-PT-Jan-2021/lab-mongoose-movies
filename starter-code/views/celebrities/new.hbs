<h2>New Celeb</h2>

<form action="/celebrities" method="post">
    <label for="name">
        Name
    </label>
    <input type="text" name="name">
    <label for="occupation">
        occupation
    </label>
    <input type="text" name="occupation">
    <label for="catchphrase">
        catchphrase
    </label>
    <input type="text" name="catchphrase">
    <select name="movies" id="">
        {{#each movies}}
        <option value='{{_id}}'>{{title}}</option>
        {{/each}}
    </select>

    <button type="submit">Add a Celeb</button>


</form>